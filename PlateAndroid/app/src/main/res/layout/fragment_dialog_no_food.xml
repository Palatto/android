<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/topInfoBoxWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainRed">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:text=""
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <!--<View-->
            <!--android:id="@+id/topInfoBoxBottomDivider"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:layout_below="@id/topInfoBox"-->
            <!--android:layout_marginTop="16dp"-->
            <!--android:background="@color/mainGray" />-->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/middleInfoBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/topInfoBoxWrapper"
        android:layout_marginTop="18dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/confirmTextAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/mainGray"
            android:textSize="20sp" />

    </LinearLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_below="@id/middleInfoBox"-->
        <!--android:background="@android:color/darker_gray" />-->

    <LinearLayout
        android:id="@+id/cancelConfirmValueItemBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/middleInfoBox"
        android:orientation="horizontal"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/cancelItemQuantityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="False"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            style="?android:attr/borderlessButtonStyle"/>

        <!--<View-->
            <!--android:layout_width="1dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:background="@android:color/darker_gray" />-->

        <Button
            android:id="@+id/concludeItemQuantityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="True"
            android:textAllCaps="false"
            android:textColor="@color/buttonGreen"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</RelativeLayout>